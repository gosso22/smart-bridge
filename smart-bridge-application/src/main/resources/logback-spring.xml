<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for application logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/smart-bridge.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/smart-bridge.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Audit log appender for compliance -->
    <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/smart-bridge-audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/smart-bridge-audit.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>365</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] AUDIT %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Security log appender -->
    <appender name="SECURITY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/smart-bridge-security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/smart-bridge-security.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>365</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] SECURITY %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for audit events -->
    <logger name="com.smartbridge.audit" level="INFO" additivity="false">
        <appender-ref ref="AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for security events -->
    <logger name="com.smartbridge.security" level="INFO" additivity="false">
        <appender-ref ref="SECURITY"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for security alerts -->
    <logger name="SECURITY_ALERT" level="INFO" additivity="false">
        <appender-ref ref="SECURITY"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for system alerts -->
    <logger name="SYSTEM_ALERT" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for admin notifications -->
    <logger name="ADMIN_NOTIFICATION" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="SECURITY"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for transformation operations -->
    <logger name="com.smartbridge.transformation" level="DEBUG"/>

    <!-- Logger for mediator operations -->
    <logger name="com.smartbridge.mediators" level="DEBUG"/>

    <!-- HAPI FHIR logging -->
    <logger name="ca.uhn.fhir" level="INFO"/>

    <!-- Spring Boot logging -->
    <logger name="org.springframework" level="INFO"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Profile-specific configurations -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>